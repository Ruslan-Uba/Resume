<div class='col-6'>
  <div class='card'>
    <div class='card-body'>
      <div class='card-image'>
        <img src='{{img}}' alt='photos' />
      </div>
      <div class='mt-3'>
        {{#if isHot}}
          <span
            class='badge rounded-pill text-bg-warning'
          >Hot</span>
        {{/if}}
        {{#if isNew}}
          <span
            class='badge rounded-pill text-bg-primary'
          >New</span>
        {{/if}}
      </div>
      <div class='col-3 mt-2'>
        {{#if isFast}}
          <button class='badge text-bg-success mb-3'>Швидка
            доставка</button>
        {{/if}}
        {{#if isFree}}
          <button
            class='badge text-bg-secondary mb-3'
          >Безкоштовна доставка</button>
        {{/if}}
      </div>
      <p class='h4 mt-2'>{{name}}</p>
      {{#with review}}
        <p class='fs-5'>{{amount}} {{text}}</p>
      {{/with}}
      <p class='h3 mt-2'>{{price}}</p>
      <p class='fs-4 mt-2'>{{delivery}}</p>
      <div class='col-6 mt-2'>
        {{#each buttons}}
          {{#if isPrimary}}
            <a
              href='{{link}}'
              class='btn btn-primary'
              target='_blank'
            >{{text}}</a>
          {{/if}}
          {{#if isSecondary}}
            <a
              href='{{link}}'
              class='btn btn-secondary mt-3'
              target='_blank'
            >{{text}}</a>
          {{/if}}
        {{/each}}
      </div>
      <ul class='col-10 mt-3'>
        {{#each characteristics}}
          <li class='text-sm mt-2'>{{title}}: {{value}}</li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>
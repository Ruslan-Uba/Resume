<div class='card mt-4 mb-4'>
  <div class='row'>
    {{! Image }}
    <div class='col-2 m-2'>
      <img src='{{image}}' alt='photo' />
    </div>
    {{! Text }}
    <div class='col-4 mt-3'>
      <h5>{{name}}</h5>
      <p>{{description}}</p>
    </div>
    {{! Price }}
    <div class='col-2 mt-5'>
      {{#with price}}
        <span>{{title}}: {{value}}</span>
      {{/with}}
    </div>
    {{! Amount }}
    <div class='col-1 mt-5'>
      <span>{{amount}}</span>
    </div>
    {{! Buttons }}
    <div class='col-2'>
      {{#each buttons}}
        <div class='col-2 mt-3'>
          {{#if isPrimary}}
            <button
              type='button'
              class='btn btn-primary mb-2'
            >{{text}}</button>
          {{/if}}
        </div>
        <div class='col-3'>
          {{#if isDanger}}
            <button
              type='button'
              class='btn btn-outline-danger'
            >{{text}}</button>
          {{/if}}
        </div>
      {{/each}}
    </div>
  </div>
</div>
{{! 
Це код container файлу для work сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/work"
}}

<div>
{{#with main}}  
  <main> 
    <section>
        {{> title data="Work history" big=true}}
      <div>
        <ul>
          {{#each works}}
            <li>
              <div>{{position}}</div>
              <br>
              {{#if company.url}}
              <div>
                {{> link text=company.name href=company.url blank=true noLine=true}}
              </div>              
              {{else}}
                <b>{{company.name}}</b>
              {{/if}}
              <br>
              <br>
              <div>
                {{duration.from}} - 
                {{#if duration.to}}
                  {{duration.to}}
                {{else}} 
                  (досі працюю)
                {{/if}} 
              </div>
              <br>              
              <br>
              <div>
                <strong>Projects ({{projectAmount}})</strong>
              </div>
              <br>
              <ul>
                {{#each projects}}
                <li>
                  <div>
                    {{> link text=name href=url blank=true noLine=true}}
                  </div>
                  <br>
                  <div>
                    <p>About: {{about}}</p>
                  </div>
                  <br>
                  <div>
                    <em>Project stacks ({{stackAmount}})</em>
                  </div>
                  <br>
                  {{#each stacks}}
                  <li>
                  <div>
                    {{name}}
                  </div>
                  </li>
                  {{/each}}
                  <br>
                  <div>
                    <em>Project awards</em>
                  </div>
                  <br>
                  {{#each awards}}
                  <li>
                  <div>
                    {{name}}
                  </div>
                  </li>
                  {{/each}}
                </li>
                {{/each}}
              </ul>
            </li>               
          {{/each}}
        </ul>
      </div>
    </section>
  </main>
{{/with}}
</div>

{{!-- 
    Цей код містить лише те, що буде виводитись в {{{body}}} в layout/default.hbs
    Адже наш layout/default.hbs має вже структуру HTML
--}}
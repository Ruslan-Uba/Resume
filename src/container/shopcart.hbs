<main>
  <div class='card'>
    <div class='card-header p-3'>
      {{#with navigation}}
        <div class='row'>
          {{#each links}}
            <div class='col-2'>
              <div class='nav'>
                <div class='nav-item'>
                  {{#if @last}}
                    <a
                      href='{{href}}'
                      class='nav-link disabled'
                    >{{text}}</a>
                  {{else}}
                    <a
                      href='{{href}}'
                      class='nav-link'
                    >{{text}}</a>
                  {{/if}}
                </div>
              </div>
            </div>
          {{/each}}
        </div>
      {{/with}}
    </div>
    <div class='card-body mt-5'>
      <div class='mb-5'>
        {{#with header}}
          <h1>{{title}}</h1>
          {{#with button}}
            <a
              href='{{link}}'
              type='button'
              class='btn btn-outline-secondary'
              target='_blank'
            >{{text}}</a>
          {{/with}}
        {{/with}}
      </div>
      <hr />
      {{! Card }}
      {{#each goodsBlock}}
      {{> cartGoodsItem}}        
      {{/each}}
      {{!-- // --}}
      <hr />
      <div class="mt-3 mb-3">
      {{#with total}}
        <p class="fs-3 fw-medium">{{title}}</p>
        <p class="fs-1 fw-bold">{{amount}}</p>
        <p class="text-sm">{{delivery}}</p>        
        <div class="col-3">
          {{#each buttons}}
            {{#if isSuccess}}
            <a href="{{link}}" class="btn btn-success mb-3">{{text}}</a>
            {{/if}}
            {{#if isOutline}}
            <a href="{{link}}" class="btn btn-outline-success">{{text}}</a>
            {{/if}}
          {{/each}}          
        </div>
      {{/with}}
      </div>
      {{!-- // --}}
      <hr />
      <div class="mt-3 mb-3">
        {{#with goodsOtherBlock}}
          <p class="fs-3 fw-medium text-center">{{title}}</p>
          <div class="row">            
            {{#each cards}}
              <div class="col-4 md-2">
                <div class="card">
                  <img src="{{image}}" alt="Photo">
                  <div class="card-body">
                    <div class="card-title">{{title}}
                      {{#if isHot}}
                        <span
                          class='badge rounded-pill text-bg-danger'
                        >Hot!</span>
                      {{/if}}
                      {{#if isNew}}
                        <span
                          class='badge rounded-pill text-bg-primary'
                        >New</span>
                      {{/if}}
                    </div>
                    <div class="card-text">{{description}}</div>
                  </div>
                </div>
              </div>
              {{/each}}            
          </div>
        {{/with}}
      </div>
      {{!-- // --}}
      <hr>
      <div class="mt-3 mb-3">
        <div class="card text-bg-dark p-2">       
        {{#with subscribe}}
        <div class="card-body">
          <h2>{{header}}</h2>
          <p class="text-sm">{{description}}</p>          
            {{#each buttons}}
              <div class="col-3">
                <a href="{{link}}" class="btn btn-primary mb-3">{{text}}</a>
              </div>
            {{/each}}
          </div>
        {{/with}}        
        </div>
      </div>
      {{!-- // --}}
      <hr>
      {{> footer_link}}
    </div>
  </div>
</main>
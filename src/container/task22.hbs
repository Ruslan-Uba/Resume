<main>
  {{#with page_header}}
    <div class='text-center'>
      <h1>{{title}}</h1>
      <p class='text-uppercase'>{{description}}</p>
    </div>
  {{/with}}
  <section>
    {{#with section}}
      {{#with about_us}}
        <div class='card mt-5'>
          <div class='card-body p-3'>
            {{#with title_list}}
              <div class='text-end display-6'>
                <h2>{{main}}</h2>
                <p>{{sub}}</p>
              </div>
            {{/with}}
            {{#with button}}
              <button
                type='button'
                class='btn btn-outline-info m-3'
              >{{text}}</button>
            {{/with}}
          </div>
        </div>
      {{/with}}
      <div class='card mt-5'>
        <div class='card-body display-5 text-muted m-3'>
          {{#with advantage}}
            <strong>{{title}}</strong>
            <div class='card p-3 m-2'>
              {{#with efficiency}}
                <div class='card-body'>
                  <div class='display-4'>
                    <h6>{{title}}</h6>
                    <p>{{sub_title}}</p>
                    <p>{{description}}</p>
                  </div>
                  <button
                    class='btn btn-outline-warning mt-5'
                  >{{button}}</button>
                </div>
              {{/with}}
            </div>
            <div class='card p-3 m-2'>
              {{#with innovation}}
                <div class='card-body'>
                  <div class='display-4 text-center'>
                    <h6>{{title}}</h6>
                    <p>{{sub_title}}</p>
                    <p>{{description}}</p>
                  </div>
                  <div class='mt-5'>
                    <button
                      class='btn btn-outline-warning'
                    >{{button}}</button>
                  </div>
                </div>
              {{/with}}
            </div>
            <div class='card p-3 m-2'>
              {{#with collaboration}}
                <div class='card-body'>
                  <div class='display-4 text-end'>
                    <h6>{{title}}</h6>
                    <p>{{sub_title}}</p>
                    <p>{{description}}</p>
                  </div>
                  <div class='mt-5'>
                    <button
                      class='btn btn-outline-warning'
                    >{{button}}</button>
                  </div>
                </div>
              {{/with}}
            </div>
          {{/with}}
        </div>
      </div>
      <div class='card mt-5 p-3'>
        <div class='card-body'>
          <div class='display-5'>
            {{#with agreement}}
              <strong
                class='text-lowercase'
              >{{title}}</strong>
              <div class='card'>
                <div class='card-body m-3'>
                  {{#with info}}
                    <h5>{{sub_title}}</h5>
                    <div class='card p-3'>
                      <div class='card-bady m-3'>
                        {{#with detail}}
                          <p>{{text}}</p>
                          <button
                            class='btn btn-success'
                          >{{button}}</button>
                        {{/with}}
                      </div>
                    </div>
                  {{/with}}
                </div>
              </div>
            {{/with}}
          </div>
        </div>
      </div>
    {{/with}}
  </section>
</main>